my_set.add(4)
my_set.update([5, 6])
print(my_set)

my_set = {1, 2, 3, 4, 5}
my_set.remove(3)
print(my_set)

my_set = {1, 2, 3, 4}
my_set.discard(3)
my_set.discard(10)
