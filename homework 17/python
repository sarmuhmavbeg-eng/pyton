import pandas as pd
import numpy as np

# –ú–∞—ä–ª—É–º–æ—Ç–ª–∞—Ä
data = {
    '–ò–º—è': ['–°–∞—Ä–¥–æ—Ä', '–ë–µ–∫–∑–æ–¥', '–°–∞—Ä–≤–∞—Ä', '–°–∞–Ω–∂–∞—Ä'],
    '–í–æ–∑—Ä–∞—Å—Ç': [25, 30, 35, 40],
    '–ì–æ—Ä–æ–¥': ['–¢–æ—à–∫–µ–Ω—Ç', '–°–∞–º–∞—Ä“õ–∞–Ω–¥', '–ñ–∏–∑–∑–∞—Ö', '“ö–∞—Ä—à–∏']
}

df = pd.DataFrame(data)

# 1. –£—Å—Ç—É–Ω –Ω–æ–º–ª–∞—Ä–∏–Ω–∏ —û–∑–≥–∞—Ä—Ç–∏—Ä–∏—à
df.rename(columns={'–ò–º—è': 'first_name', '–í–æ–∑—Ä–∞—Å—Ç': 'age'}, inplace=True)

# 2. –ë–∏—Ä–∏–Ω—á–∏ 3 “õ–∞—Ç–æ—Ä–Ω–∏ —á–∏“õ–∞—Ä–∏—à
print("–ë–∏—Ä–∏–Ω—á–∏ 3 “õ–∞—Ç–æ—Ä:")
print(df.head(3))

# 3. –é—Ä—Ç–∞—á–∞ —ë—à–Ω–∏ “≥–∏—Å–æ–±–ª–∞—à
mean_age = df['age'].mean()
print("\n–é—Ä—Ç–∞—á–∞ —ë—à:", mean_age)

# 4. –§–∞“õ–∞—Ç ism –≤–∞ shah–∞—Ä —É—Å—Ç—É–Ω–ª–∞—Ä–∏–Ω–∏ —Ç–∞–Ω–ª–∞–± —á–∏“õ–∞—Ä–∏—à
print("\n–§–∞“õ–∞—Ç 'first_name' –≤–∞ '–ì–æ—Ä–æ–¥' —É—Å—Ç—É–Ω–ª–∞—Ä–∏:")
print(df[['first_name', '–ì–æ—Ä–æ–¥']])

# 5. –Ø–Ω–≥–∏ ‚Äú–ó–∞—Ä–ø–ª–∞—Ç–∞‚Äù —É—Å—Ç—É–Ω–∏–Ω–∏ “õ—û—à–∏—à
df['–ó–∞—Ä–ø–ª–∞—Ç–∞'] = np.random.randint(40000, 80000, size=len(df))

# 6. –°–≤–æ–¥–Ω–∞—è —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞
print("\n–°–≤–æ–¥–Ω–∞—è —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞:")
print(df.describe(include='all'))




import pandas as pd

# –ú–∞—ä–ª—É–º–æ—Ç–ª–∞—Ä
data = {
    '–ú–µ—Å—è—Ü': ['–Ø–Ω–≤–∞—Ä—å', '–§–µ–≤—Ä–∞–ª—å', '–ú–∞—Ä—Ç', '–ê–ø—Ä–µ–ª—å'],
    '–ü—Ä–æ–¥–∞–∂–∏': [5000, 6000, 7500, 8000],
    '–†–∞—Å—Ö–æ–¥—ã': [3000, 3500, 4000, 4500]
}

sales_and_expenses = pd.DataFrame(data)

print("–¢–∞–±–ª–∏—Ü–∞ –º–∞—ä–ª—É–º–æ—Ç–ª–∞—Ä–∏:")
print(sales_and_expenses)

# 1. –ú–∞–∫—Å–∏–º–∞–ª “õ–∏–π–º–∞—Ç–ª–∞—Ä
print("\n–ú–∞–∫—Å–∏–º–∞–ª “õ–∏–π–º–∞—Ç–ª–∞—Ä:")
print("–ü—Ä–æ–¥–∞–∂–∏:", sales_and_expenses['–ü—Ä–æ–¥–∞–∂–∏'].max())
print("–†–∞—Å—Ö–æ–¥—ã:", sales_and_expenses['–†–∞—Å—Ö–æ–¥—ã'].max())

# 2. –ú–∏–Ω–∏–º–∞–ª “õ–∏–π–º–∞—Ç–ª–∞—Ä
print("\n–ú–∏–Ω–∏–º–∞–ª “õ–∏–π–º–∞—Ç–ª–∞—Ä:")
print("–ü—Ä–æ–¥–∞–∂–∏:", sales_and_expenses['–ü—Ä–æ–¥–∞–∂–∏'].min())
print("–†–∞—Å—Ö–æ–¥—ã:", sales_and_expenses['–†–∞—Å—Ö–æ–¥—ã'].min())

# 3. –é—Ä—Ç–∞—á–∞ “õ–∏–π–º–∞—Ç–ª–∞—Ä
print("\n–é—Ä—Ç–∞—á–∞ “õ–∏–π–º–∞—Ç–ª–∞—Ä:")
print("–ü—Ä–æ–¥–∞–∂–∏:", sales_and_expenses['–ü—Ä–æ–¥–∞–∂–∏'].mean())
print("–†–∞—Å—Ö–æ–¥—ã:", sales_and_expenses['–†–∞—Å—Ö–æ–¥—ã'].mean())



import pandas as pd

# –ú–∞—ä–ª—É–º–æ—Ç–ª–∞—Ä
data = {
    '–ö–∞—Ç–µ–≥–æ—Ä–∏—è': ['–ê—Ä–µ–Ω–¥–Ω–∞—è –ø–ª–∞—Ç–∞', '–°–ª—É–∂–µ–±–Ω—ã–µ –ø—Ä–æ–≥—Ä–∞–º–º—ã', '–ë–∞–∫–∞–ª–µ—è', '–†–∞–∑–≤–ª–µ—á–µ–Ω–∏—è'],
    '–Ø–Ω–≤–∞—Ä—å': [1200, 200, 300, 150],
    '–§–µ–≤—Ä–∞–ª—å': [1300, 220, 320, 160],
    '–ú–∞—Ä—Ç': [1400, 240, 330, 170],
    '–ê–ø—Ä–µ–ª—å': [1500, 250, 350, 180]
}

expenses = pd.DataFrame(data)

# "–ö–∞—Ç–µ–≥–æ—Ä–∏—è" —É—Å—Ç—É–Ω–∏–Ω–∏ –∏–Ω–¥–µ–∫—Å —Å–∏—Ñ–∞—Ç–∏–¥–∞ –±–µ–ª–≥–∏–ª–∞–π–º–∏–∑
expenses = expenses.set_index('–ö–∞—Ç–µ–≥–æ—Ä–∏—è')

print("üßæ –ï–∂–µ–º–µ—Å—è—á–Ω—ã–µ —Ä–∞—Å—Ö–æ–¥—ã:")
print(expenses)

# 1. –ú–∞–∫—Å–∏–º–∞–ª “õ–∏–π–º–∞—Ç–ª–∞—Ä
print("\n–ú–∞–∫—Å–∏–º–∞–ª —Ö–∞—Ä–∞–∂–∞—Ç–ª–∞—Ä (“≥–∞—Ä –±–∏—Ä –∫–∞—Ç–µ–≥–æ—Ä–∏—è –±—û–π–∏—á–∞):")
print(expenses.max(axis=1))

# 2. –ú–∏–Ω–∏–º–∞–ª “õ–∏–π–º–∞—Ç–ª–∞—Ä
print("\n–ú–∏–Ω–∏–º–∞–ª —Ö–∞—Ä–∞–∂–∞—Ç–ª–∞—Ä:")
print(expenses.min(axis=1))

# 3. –é—Ä—Ç–∞—á–∞ “õ–∏–π–º–∞—Ç–ª–∞—Ä
print("\n–é—Ä—Ç–∞—á–∞ —Ö–∞—Ä–∞–∂–∞—Ç–ª–∞—Ä:")
print(expenses.mean(axis=1))





