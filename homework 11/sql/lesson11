select * from employees

select * from (
select * from employees) as A

select department_id, avg(salary) as avg_salary from Employees group by department_id;


select department_id,avg(salary) AS avg_salary from Employees group by department_id having avg(salary) > 80000


select * from Employees where department_id in (select department_id from Employees group by department_id having avg(salary) > 80000);




