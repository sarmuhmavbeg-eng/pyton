import sqlite3

# 1. –ú–∞—ä–ª—É–º–æ—Ç–ª–∞—Ä –±–∞–∑–∞—Å–∏–Ω–∏ —è—Ä–∞—Ç–∏—à (–∞–≥–∞—Ä –π—û“õ –±—û–ª—Å–∞)
conn = sqlite3.connect("starfleet.db")
cur = conn.cursor()

# 1. Roster –∂–∞–¥–≤–∞–ª–∏–Ω–∏ —è—Ä–∞—Ç–∏—à
cur.execute("""
CREATE TABLE IF NOT EXISTS Roster (
    Name TEXT,
    Species TEXT,
    Age INTEGER
)
""")

# 2. –ñ–∞–¥–≤–∞–ª–Ω–∏ –º–∞—ä–ª—É–º–æ—Ç–ª–∞—Ä –±–∏–ª–∞–Ω —Ç—û–ª–¥–∏—Ä–∏—à
data = [
    ("Sardor beg", "Human", 40),
    ("Sarvar Sar", "Trill", 300),
    ("Shamshot shat", "Bajoran", 29)
]

cur.executemany("INSERT INTO Roster (Name, Species, Age) VALUES (?, ?, ?)", data)
conn.commit()

# 3. JSarvar Sar'–Ω–∏ Sardor beg –¥–µ–± —è–Ω–≥–∏–ª–∞—à
cur.execute("""
UPDATE Roster
SET Name = 'Sardor beg'
WHERE Name = 'Sarvar Sar'
""")
conn.commit()

# 4. Species = 'Bajoran' –±—û–ª–≥–∞–Ω–ª–∞—Ä–Ω–∏–Ω–≥ –∏—Å–º–∏ –≤–∞ —ë—à–∏–Ω–∏ —á–∏“õ–∞—Ä–∏—à
print("üßë‚ÄçüöÄ Bajoran —Ç—É—Ä–∏–≥–∞ –º–∞–Ω—Å—É–± —à–∞—Ö—Å–ª–∞—Ä:")
cur.execute("SELECT Name, Age FROM Roster WHERE Species = 'Bajoran'")
for row in cur.fetchall():
    print(f"–ò—Å–º: {row[0]} | –Å—à: {row[1]}")

# –Ø–∫—É–Ω–¥–∞ –±–∞–∑–∞–Ω–∏ —ë–ø–∞–º–∏–∑
conn.close()



  
